{
  "name": "mbclient",
  "version": "2.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "Message broker library",
  "keywords": [
    "amqp",
    "message broker"
  ],
  "license": "Apache-2.0",
  "author": "Gajewski Dmitriy Yurevish <d.y.gaevskiy@tinkoff.ru>",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "repository": "https://github.com/TinkoffCreditSystems/mbclient.git"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "check": "npm run lint && npm run test:unit",
    "test": "npm run test:unit",
    "test:unit": "jest --coverage --verbose",
    "test:ci": "npm run test:unit -- --coverageReporters=lcov",
    "test:unit:watch": "jest --watch",
    "prepublishOnly": "npm run check && npm run build",
    "semantic-release": "semantic-release"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "amqplib": "^0.8.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/amqplib": "^0.8.1",
    "@types/jest": "^27.0.0",
    "@types/node": "^10",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.0.6",
    "semantic-release": "^17.4.4",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  }
